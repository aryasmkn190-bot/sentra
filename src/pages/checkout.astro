<script>
  const CART_KEY = 'swasembada_cart';
  
  function getCart() {
    try { return JSON.parse(localStorage.getItem(CART_KEY) || '[]'); }
    catch { return []; }
  }

  function renderCheckout() {
    const cart = getCart();
    const orderItems = document.getElementById('orderItems');
    const orderEmpty = document.getElementById('orderEmpty');
    const orderSummaryBar = document.getElementById('orderSummaryBar');
    const itemCount = document.getElementById('itemCount');
    const submitBtn = document.getElementById('submitBtn');

    const totalQty = cart.reduce((s, i) => s + i.quantity, 0);
    if (itemCount) itemCount.textContent = `${totalQty} item`;

    if (!cart.length) {
      if (orderEmpty) orderEmpty.style.display = 'flex';
      if (orderSummaryBar) orderSummaryBar.style.display = 'none';
      if (submitBtn) submitBtn.disabled = true;
      return;
    }

    if (orderEmpty) orderEmpty.style.display = 'none';
    if (orderSummaryBar) orderSummaryBar.style.display = 'block';
    if (submitBtn) submitBtn.disabled = false;

    const itemsHtml = cart.map(item => `
      <div class="oi">
        <div class="oi-main">
          <div class="oi-icon">${item.type === 'paket' ? 'üì¶' : 'üö¨'}</div>
          <div class="oi-details">
            <h4>${item.name}</h4>
            ${item.items ? `<div class="oi-sub">${item.items.map(i => `<small>‚Ä¢ ${i}</small>`).join('')}</div>` : ''}
          </div>
        </div>
        <div class="oi-meta">
          <div class="oi-qty">
            <button class="oi-qty-btn" onclick="changeQty(${item.id}, -1)">‚àí</button>
            <span>${item.quantity}</span>
            <button class="oi-qty-btn" onclick="changeQty(${item.id}, 1)">+</button>
          </div>
          <div class="oi-price">Rp ${(item.price * item.quantity).toLocaleString('id-ID')}</div>
          <button class="oi-remove" onclick="removeItem(${item.id})">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/></svg>
          </button>
        </div>
      </div>
    `).join('');

    if (orderItems) {
      // Keep the empty state element, but replace items
      const emptyDiv = orderItems.querySelector('.order-empty');
      orderItems.innerHTML = itemsHtml;
      if (emptyDiv) orderItems.prepend(emptyDiv);
    }

    const total = cart.reduce((s, i) => s + (i.price * i.quantity), 0);
    const subtotal = document.getElementById('subtotalAmount');
    const totalEl = document.getElementById('totalAmount');
    if (subtotal) subtotal.textContent = `Rp ${total.toLocaleString('id-ID')}`;
    if (totalEl) totalEl.textContent = `Rp ${total.toLocaleString('id-ID')}`;
  }

  function changeQty(pid, delta) {
    const cart = getCart();
    const item = cart.find(i => i.id === pid);
    if (item) {
      item.quantity += delta;
      if (item.quantity <= 0) { removeItem(pid); return; }
      localStorage.setItem(CART_KEY, JSON.stringify(cart));
    }
    renderCheckout();
  }

  function removeItem(pid) {
    const cart = getCart().filter(i => i.id !== pid);
    localStorage.setItem(CART_KEY, JSON.stringify(cart));
    renderCheckout();
  }

  window.changeQty = changeQty;
  window.removeItem = removeItem;

  // Form submission
  document.getElementById('checkoutForm')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const cart = getCart();
    if (!cart.length) return;

    const submitBtn = document.getElementById('submitBtn');
    const btnText = document.getElementById('submitBtnText');
    if (submitBtn) submitBtn.disabled = true;
    if (btnText) btnText.textContent = 'Memproses...';

    const body = {
      customerName: document.getElementById('customerName').value,
      whatsappNumber: document.getElementById('whatsappNumber').value,
      kelompok: document.getElementById('kelompok').value,
      items: cart.map(i => ({
        productId: i.id,
        productName: i.name,
        productType: i.type,
        quantity: i.quantity,
        price: i.price,
        items: i.items,
      })),
      totalAmount: cart.reduce((s, i) => s + (i.price * i.quantity), 0),
    };

    try {
      const res = await fetch('/api/checkout', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(body),
      });

      const result = await res.json();
      if (result.success) {
        localStorage.removeItem(CART_KEY);
        document.getElementById('successOrderNumber').textContent = result.orderNumber;
        document.getElementById('successDesc').textContent = result.waSent
          ? 'Detail pesanan telah dikirim ke WhatsApp Anda.'
          : 'Pesanan tersimpan. Admin akan menghubungi Anda.';
        document.getElementById('successOverlay')?.classList.add('open');
      } else {
        window.showToast?.(result.message || 'Gagal memproses pesanan', 'error');
      }
    } catch {
      window.showToast?.('Terjadi kesalahan jaringan. Coba lagi.', 'error');
    } finally {
      if (submitBtn) submitBtn.disabled = false;
      if (btnText) btnText.textContent = 'Pesan Sekarang';
    }
  });

  renderCheckout();
</script>

