---
import AdminLayout from '../../layouts/AdminLayout.astro';
import { db } from '../../lib/db';
import { adminUsers } from '../../lib/schema';
import { getAdminUser } from '../../lib/auth';
import { asc } from 'drizzle-orm';

const currentAdmin = getAdminUser(Astro.request);
if (currentAdmin?.role !== 'super_admin') {
  return Astro.redirect('/admin');
}

let allAdmins: any[] = [];
try {
  allAdmins = await db.select({
    id: adminUsers.id,
    username: adminUsers.username,
    name: adminUsers.name,
    role: adminUsers.role,
    allowedOffices: adminUsers.allowedOffices,
    isActive: adminUsers.isActive,
    createdAt: adminUsers.createdAt,
  }).from(adminUsers).orderBy(asc(adminUsers.id));
} catch (error) {
  console.error('Error fetching admin users:', error);
}

const officeList = [
  'PTO CENTRAL',
  'PTO HOLDING 1', 'PTO HOLDING 2', 'PTO HOLDING 3', 'PTO HOLDING 4', 'PTO HOLDING 5',
  'PTO 1', 'PTO 2', 'PTO 3', 'PTO 4', 'PTO 5', 'PTO 6',
];
---

<AdminLayout title="Kelola Admin" activeMenu="users">
  <div class="users-header">
    <div class="users-stats">
      <div class="users-stat">
        <span class="users-stat-value">{allAdmins.length}</span>
        <span class="users-stat-label">Total Admin</span>
      </div>
      <div class="users-stat">
        <span class="users-stat-value">{allAdmins.filter(a => a.role === 'super_admin').length}</span>
        <span class="users-stat-label">Super Admin</span>
      </div>
      <div class="users-stat">
        <span class="users-stat-value">{allAdmins.filter(a => a.isActive).length}</span>
        <span class="users-stat-label">Aktif</span>
      </div>
    </div>
    <button class="btn btn-primary" id="addAdminBtn">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
      <span class="btn-text-desktop">Tambah Admin</span>
      <span class="btn-text-mobile">Tambah</span>
    </button>
  </div>

  <!-- Admin Users List -->
  {allAdmins.length > 0 ? (
    <div class="admin-users-list">
      {allAdmins.map((admin) => (
        <div class="user-card" data-user-id={admin.id}>
          <div class="uc-header">
            <div class="uc-avatar" style={admin.role === 'super_admin' ? 'background: linear-gradient(135deg, #F59E0B, #FBBF24);' : 'background: linear-gradient(135deg, #3B82F6, #60A5FA);'}>
              {admin.name.charAt(0).toUpperCase()}
            </div>
            <div class="uc-info">
              <div class="uc-name-row">
                <strong>{admin.name}</strong>
                <span class={`role-chip role-chip-${admin.role}`}>
                  {admin.role === 'super_admin' ? 'üëë Super Admin' : 'üõ°Ô∏è Admin'}
                </span>
              </div>
              <span class="uc-username">@{admin.username}</span>
            </div>
            <div class="uc-actions">
              <span class={`status-dot ${admin.isActive ? 'status-active' : 'status-inactive'}`} title={admin.isActive ? 'Aktif' : 'Nonaktif'}></span>
              {admin.id !== currentAdmin?.id && (
                <>
                  <button class="icon-btn edit-admin-btn"
                    data-id={admin.id}
                    data-username={admin.username}
                    data-name={admin.name}
                    data-role={admin.role}
                    data-offices={JSON.stringify(admin.allowedOffices || [])}
                    data-active={admin.isActive}
                    title="Edit">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/></svg>
                  </button>
                  <button class="icon-btn icon-btn-danger delete-admin-btn" data-id={admin.id} data-name={admin.name} title="Hapus">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="3 6 5 6 21 6"/><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/></svg>
                  </button>
                </>
              )}
              {admin.id === currentAdmin?.id && (
                <span class="you-badge">Anda</span>
              )}
            </div>
          </div>
          {admin.role === 'admin' && (
            <div class="uc-offices">
              <span class="uc-offices-label">üìÅ Akses Kantor:</span>
              <div class="uc-offices-chips">
                {(admin.allowedOffices || []).length > 0 ? (
                  (admin.allowedOffices || []).map((office: string) => (
                    <span class="office-chip">{office}</span>
                  ))
                ) : (
                  <span class="no-offices">Belum ada kantor yang diizinkan</span>
                )}
              </div>
            </div>
          )}
          {admin.role === 'super_admin' && (
            <div class="uc-offices">
              <span class="uc-offices-label">üìÅ Akses Kantor:</span>
              <span class="all-offices-badge">‚úÖ Semua Kantor</span>
            </div>
          )}
        </div>
      ))}
    </div>
  ) : (
    <div class="empty-state-card">
      <div class="empty-icon">üë•</div>
      <p>Belum ada admin terdaftar</p>
      <small>Tambahkan admin pertama di atas</small>
    </div>
  )}

  <!-- Add/Edit Admin Modal -->
  <div class="modal-overlay" id="adminModal">
    <div class="modal-card">
      <div class="modal-header">
        <h2 id="modalTitle">Tambah Admin Baru</h2>
        <button class="modal-close" id="modalClose">‚úï</button>
      </div>
      <form id="adminForm">
        <input type="hidden" id="adminId" />
        <div class="form-group">
          <label class="form-label">Nama Lengkap <span class="required">*</span></label>
          <input type="text" id="adminName" class="form-input" placeholder="Nama admin" required />
        </div>
        <div class="form-group">
          <label class="form-label">Username <span class="required">*</span></label>
          <input type="text" id="adminUsername" class="form-input" placeholder="Username untuk login" required />
        </div>
        <div class="form-group">
          <label class="form-label">Password <span class="required" id="pwdRequired">*</span></label>
          <input type="password" id="adminPassword" class="form-input" placeholder="Password" />
          <small class="form-hint" id="pwdHint" style="display:none;">Kosongkan jika tidak ingin mengubah password</small>
        </div>
        <div class="form-group">
          <label class="form-label">Role</label>
          <select id="adminRole" class="form-select">
            <option value="admin">üõ°Ô∏è Admin ‚Äî Akses terbatas ke kantor tertentu</option>
            <option value="super_admin">üëë Super Admin ‚Äî Akses penuh ke semua fitur</option>
          </select>
        </div>
        <div class="form-group" id="officesGroup">
          <label class="form-label">Kantor yang Diizinkan</label>
          <small class="form-hint" style="margin-bottom: 10px; display: block;">Pilih kantor yang bisa dilihat/direkap oleh admin ini</small>
          <div class="offices-grid">
            {officeList.map(office => (
              <label class="office-toggle">
                <input type="checkbox" name="offices" value={office} />
                <span class="office-toggle-label">{office}</span>
              </label>
            ))}
          </div>
          <div class="office-quick-actions">
            <button type="button" class="btn btn-sm btn-secondary" id="selectAllOffices">Pilih Semua</button>
            <button type="button" class="btn btn-sm btn-secondary" id="deselectAllOffices">Hapus Semua</button>
          </div>
        </div>
        <div class="form-group">
          <div class="toggle-row">
            <div class="toggle-info">
              <strong>Status Aktif</strong>
              <small>Nonaktifkan untuk melarang login tanpa menghapus akun</small>
            </div>
            <label class="toggle-switch">
              <input type="checkbox" id="adminActive" checked />
              <span class="toggle-slider"></span>
            </label>
          </div>
        </div>
        <div class="modal-actions">
          <button type="button" class="btn btn-secondary" id="modalCancelBtn">Batal</button>
          <button type="submit" class="btn btn-primary" id="submitBtn">
            <span id="submitBtnText">üíæ Simpan</span>
            <span id="submitBtnLoading" style="display:none;">‚è≥ Menyimpan...</span>
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Delete Confirm -->
  <div class="confirm-overlay" id="deleteOverlay">
    <div class="confirm-modal">
      <div class="confirm-icon">üóëÔ∏è</div>
      <h3>Hapus Admin?</h3>
      <p id="deleteDesc">Admin ini akan dihapus permanen.</p>
      <div class="confirm-actions">
        <button class="btn btn-secondary" id="deleteCancelBtn">Batal</button>
        <button class="btn btn-danger" id="deleteConfirmBtn">Ya, Hapus</button>
      </div>
    </div>
  </div>
</AdminLayout>

<script>
  const modal = document.getElementById('adminModal');
  const form = document.getElementById('adminForm');
  let editingId = null;
  let pendingDeleteId = null;

  // ===== MODAL OPEN/CLOSE =====
  function openModal(isEdit = false) {
    modal?.classList.add('open');
    document.body.style.overflow = 'hidden';
    const title = document.getElementById('modalTitle');
    const pwdRequired = document.getElementById('pwdRequired');
    const pwdHint = document.getElementById('pwdHint');
    const pwdInput = document.getElementById('adminPassword');
    
    if (isEdit) {
      if (title) title.textContent = 'Edit Admin';
      if (pwdRequired) pwdRequired.style.display = 'none';
      if (pwdHint) pwdHint.style.display = 'block';
      if (pwdInput) pwdInput.removeAttribute('required');
    } else {
      if (title) title.textContent = 'Tambah Admin Baru';
      if (pwdRequired) pwdRequired.style.display = '';
      if (pwdHint) pwdHint.style.display = 'none';
      if (pwdInput) pwdInput.setAttribute('required', '');
    }
    updateOfficesVisibility();
  }

  function closeModal() {
    modal?.classList.remove('open');
    document.body.style.overflow = '';
    editingId = null;
    form?.reset();
    document.querySelectorAll('input[name="offices"]').forEach(cb => cb.checked = false);
    document.getElementById('adminActive').checked = true;
  }

  document.getElementById('addAdminBtn')?.addEventListener('click', () => {
    editingId = null;
    document.getElementById('adminId').value = '';
    document.getElementById('adminName').value = '';
    document.getElementById('adminUsername').value = '';
    document.getElementById('adminPassword').value = '';
    document.getElementById('adminRole').value = 'admin';
    document.getElementById('adminActive').checked = true;
    document.querySelectorAll('input[name="offices"]').forEach(cb => cb.checked = false);
    openModal(false);
  });

  document.getElementById('modalClose')?.addEventListener('click', closeModal);
  document.getElementById('modalCancelBtn')?.addEventListener('click', closeModal);
  modal?.addEventListener('click', (e) => { if (e.target === modal) closeModal(); });

  // ===== ROLE CHANGE ‚Üí TOGGLE OFFICES =====
  function updateOfficesVisibility() {
    const role = document.getElementById('adminRole')?.value;
    const officesGroup = document.getElementById('officesGroup');
    if (officesGroup) {
      officesGroup.style.display = role === 'admin' ? '' : 'none';
    }
  }
  document.getElementById('adminRole')?.addEventListener('change', updateOfficesVisibility);

  // ===== QUICK SELECT OFFICES =====
  document.getElementById('selectAllOffices')?.addEventListener('click', () => {
    document.querySelectorAll('input[name="offices"]').forEach(cb => cb.checked = true);
  });
  document.getElementById('deselectAllOffices')?.addEventListener('click', () => {
    document.querySelectorAll('input[name="offices"]').forEach(cb => cb.checked = false);
  });

  // ===== EDIT BUTTON =====
  document.querySelectorAll('.edit-admin-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      editingId = parseInt(btn.dataset.id);
      document.getElementById('adminId').value = btn.dataset.id;
      document.getElementById('adminName').value = btn.dataset.name || '';
      document.getElementById('adminUsername').value = btn.dataset.username || '';
      document.getElementById('adminPassword').value = '';
      document.getElementById('adminRole').value = btn.dataset.role || 'admin';
      document.getElementById('adminActive').checked = btn.dataset.active === 'true';
      
      // Set offices
      const offices = JSON.parse(btn.dataset.offices || '[]');
      document.querySelectorAll('input[name="offices"]').forEach(cb => {
        cb.checked = offices.includes(cb.value);
      });
      
      openModal(true);
    });
  });

  // ===== FORM SUBMIT =====
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const submitBtn = document.getElementById('submitBtn');
    const submitText = document.getElementById('submitBtnText');
    const submitLoading = document.getElementById('submitBtnLoading');
    
    submitBtn.disabled = true;
    submitText.style.display = 'none';
    submitLoading.style.display = 'inline';

    const role = document.getElementById('adminRole').value;
    const allowedOffices = role === 'admin'
      ? [...document.querySelectorAll('input[name="offices"]:checked')].map(cb => cb.value)
      : [];

    const data = {
      name: document.getElementById('adminName').value,
      username: document.getElementById('adminUsername').value,
      password: document.getElementById('adminPassword').value || undefined,
      role,
      allowedOffices,
      isActive: document.getElementById('adminActive').checked,
    };

    // Remove password if empty on edit
    if (editingId && !data.password) delete data.password;
    if (editingId) data.id = editingId;

    try {
      const res = await fetch('/api/admin-users', {
        method: editingId ? 'PUT' : 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });

      const result = await res.json();
      if (result.success) {
        window.showToast?.(result.message || 'Berhasil!');
        closeModal();
        setTimeout(() => window.location.reload(), 500);
      } else {
        window.showToast?.(result.message || 'Gagal menyimpan', 'error');
      }
    } catch {
      window.showToast?.('Terjadi kesalahan', 'error');
    } finally {
      submitBtn.disabled = false;
      submitText.style.display = 'inline';
      submitLoading.style.display = 'none';
    }
  });

  // ===== DELETE =====
  document.querySelectorAll('.delete-admin-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      pendingDeleteId = parseInt(btn.dataset.id);
      const desc = document.getElementById('deleteDesc');
      if (desc) desc.textContent = `Admin "${btn.dataset.name}" akan dihapus permanen dan tidak dapat dikembalikan.`;
      document.getElementById('deleteOverlay')?.classList.add('open');
    });
  });

  document.getElementById('deleteCancelBtn')?.addEventListener('click', () => {
    document.getElementById('deleteOverlay')?.classList.remove('open');
    pendingDeleteId = null;
  });

  document.getElementById('deleteOverlay')?.addEventListener('click', (e) => {
    if (e.target === e.currentTarget) {
      document.getElementById('deleteOverlay')?.classList.remove('open');
      pendingDeleteId = null;
    }
  });

  document.getElementById('deleteConfirmBtn')?.addEventListener('click', async () => {
    if (!pendingDeleteId) return;
    const btn = document.getElementById('deleteConfirmBtn');
    if (btn) { btn.textContent = 'Menghapus...'; btn.disabled = true; }

    try {
      const res = await fetch('/api/admin-users', {
        method: 'DELETE',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ id: pendingDeleteId }),
      });
      const result = await res.json();
      if (result.success) {
        window.showToast?.(result.message || 'Admin dihapus');
        document.querySelector(`[data-user-id="${pendingDeleteId}"]`)?.remove();
        document.getElementById('deleteOverlay')?.classList.remove('open');
      } else {
        window.showToast?.(result.message || 'Gagal menghapus', 'error');
      }
    } catch {
      window.showToast?.('Terjadi kesalahan', 'error');
    } finally {
      if (btn) { btn.textContent = 'Ya, Hapus'; btn.disabled = false; }
      pendingDeleteId = null;
    }
  });
</script>

